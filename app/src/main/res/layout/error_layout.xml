<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppTransparentColor">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/AppBackgroundColor"
        android:columnCount="20"
        android:padding="10dp">

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:text="+91 1111111111"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="19"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top"
            android:text="X"
            android:textColor="@android:color/holo_red_dark" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="10"
            android:layout_below="@+id/cancel"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/face_anim"
            app:lottie_repeatCount="0"
            app:lottie_speed="0.6" />

        <TextView
            android:id="@+id/errDesc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="20"
            android:layout_below="@+id/imageView8"
            android:layout_alignParentStart="true"
            android:layout_marginTop="43dp"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="Try to renew your memebership.."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/infraccionesPopUpSituacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errDesc"
            android:layout_alignStart="@+id/errDesc"
            android:text="PAGADA"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/infraccionesPopUpFolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/infraccionesPopUpSituacion"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/OkBtn"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>


        <TextView
            android:id="@+id/error_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:text="Membership Expired !!!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/buttonText" />

    </RelativeLayout>
</RelativeLayout>