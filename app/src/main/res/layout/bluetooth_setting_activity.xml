<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_icon"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center_horizontal"
                android:text="Note : Make sure that device must be connected at least once in bluetooth history !!"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="Enter Bluetooth Device Name : "
                android:textSize="@dimen/popupSubTxt" />

            <EditText
                android:id="@+id/bluetoothDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/inputBgColor"
                android:hint="Enter Bluetooth device name..."
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/normalTxt">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/SaveSetting"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:text="Save Setting"
            android:textAllCaps="false"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/normalTxt" />

    </LinearLayout>

</LinearLayout>
