<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/black"
            android:columnCount="20"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/cancel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right|top"
                android:text="X"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/happyBirthdayAnim"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_below="@+id/cancel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="-120dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/happy_birthday_anim"
                    app:lottie_speed="1.0" />

                <ImageView
                    android:id="@+id/anniversaryImg"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_below="@+id/cancel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-30dp"
                    android:visibility="gone"
                    android:src="@drawable/anniversary_img" />

            </LinearLayout>

            <TextView
                android:id="@+id/birthTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-20dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Happy Birthday"
                android:textColor="@color/SuccessColor"
                android:textSize="@dimen/headingTxt" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>